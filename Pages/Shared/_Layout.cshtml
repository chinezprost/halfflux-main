<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HALFFLUX_main_website</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/HALFFLUX_main_website.styles.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@500&display=swap" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand text-white font-barlow" asp-area="" asp-page="/Index">HAFFLUX Studios</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/Index">about</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/Games">games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/Team">team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/News">news</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/Changelog">changelog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" asp-area="" asp-page="/Support">support</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white font-barlow" type="button" id="btnclickRegister">register</a>
                        <div class="container">
                            <div class="modal fade" tabindex="-2" id="registerModal"
                                 data-keyboard="false" data-backdrop="static">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title">Create an account.</h3>
                                        </div>
                                        <div class="modal-body">
                                            @using (Html.BeginForm("RegisterUser", "Auth"))
                                            {
                                                <div class="form-group ms-1 my-1">
                                                    <input class="form-control" type="text"
                                                           placeholder="Register Username" name="registerUsername" id="RegisterUsername"/>
                                                </div>
                                                <div class="form-group ms-1 my-3">
                                                    <input class="form-control" placeholder="Enter password" name="RegisterPassword"
                                                           type="password" id="registerPassword"/>
                                                </div>
                                                <div class="form-group ms-1 my-3">
                                                    <input class="form-control" placeholder="Confirm password" name="RegisterPasswordConfirm" type="password" id="registerConfirmPassword"/>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" value="PostRegisterUser" name="submit" formmethod="post" class="btn btn-success button button4">Register</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-white font-barlow " type="button" id="btnclick">login</a>
                        <div class="container">
                            <div class="modal fade" tabindex="-1" id="loginModal"
                                 data-keyboard="false" data-backdrop="static">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Connect to your account.</h4>
                                        </div>
                                        <div class="modal-body ">
                                            <form>
                                                <div class="form-group ms-1 my-1">
                                                    <input class="form-control" type="text"
                                                           placeholder="Login Username" id="inputUserName"/>
                                                </div>
                                                <div class="form-group ms-1 my-3">
                                                    <input class="form-control" placeholder="Login Password"
                                                           type="password" id="inputPassword"/>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-success button button4">Sign</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
                        <script type="text/javascript">
                       
                            $(document).ready(function () {
                                $("#btnclick").click(function () {
                                     $("#loginModal").modal('show');
                                });
  
                                $("#btnHideModal").click(function () {
                                    $("#loginModal").modal('hide');
                                });
                                
                                $("#btnclickRegister").click(function () {
                                    $("#registerModal").modal('show');
                                });
                                
                             
                            });
                        </script>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted">
    <div class="container">
        &copy; 2022 - HALFFLUX Studios
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>