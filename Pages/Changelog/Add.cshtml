@page
@model HALFFLUX_main_website.Pages.Changelog.Add



<!DOCTYPE html>
<script type="text/javascript">
document.addEventListener( 'DOMContentLoaded',function()
{
 CKEDITOR.replace( 'text_editor' );	
});
</script>
<html>
<head>
    <title>Hello man</title>
</head>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="card" style="padding:10px 50px 50px 50px">

    <h3>Write your Article Here</h3>

    <div>
        <form method="post" asp-page-handler="UploadChangelog">
            @Html.AntiForgeryToken()
            <div ass="col-md-10">
                <textarea style="border-color:grey;" asp-for="ChangelogVersion" id="ArticleTitle" name="ChangelogVersion" cols="70" placeholder="Version (ex: 1 3 1)"></textarea>
            </div>
            <div ass="col-md-10">
                <textarea asp-for="ChangelogContent" id="ChangelogContent" class="ckeditor" name="ChangelogContent" rows="200"></textarea>
            </div>
            <div style="padding-top:10px">
                <button class="btn btn-success" type="submit" value="submit">Upload Changelog</button>
            </div>
        </form>
    </div>
</div>
<style>
    body {
        background-color: #eee;
        font-family: "Poppins", sans-serif;
        font-weight: 300
    }
</style>


<script>
    $(document).ready(function () {
        CKEDITOR.replace('#Description');
    });
</script>
</html>